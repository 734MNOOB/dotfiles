[
    { "key": "cmd+e",          "command": "workbench.action.showAllEditors" },
    { "key": "cmd+d",           "command": "editor.action.copyLinesDownAction",
                                   "when": "editorTextFocus && !editorReadonly" },
    { "key": "cmd+y",           "command": "editor.action.deleteLines",
                                   "when": "editorTextFocus && !editorReadonly" },
    { "key": "cmd+g",           "command": "workbench.action.gotoLine" },
    { "key": "ctrl+g",          "command": "editor.action.addSelectionToNextFindMatch",
                                   "when": "editorFocus" },
    { "key": "alt+down",        "command": "editor.action.insertCursorBelow",
                                   "when": "editorTextFocus" }
]
