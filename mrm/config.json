{
    "name": "Artem Sapegin",
    "email": "artem@sapegin.ru",
    "url": "http://sapegin.me",
    "github": "sapegin",
    "eslintPreset": "tamia",
    "eslintObsoleteDependencies": ["eslint-plugin-prettier"],
    "semanticConfig": {
      "analyzeCommits": "semantic-release-tamia/analyzeCommits",
      "generateNotes": "semantic-release-tamia/generateNotes",
      "verifyRelease": "semantic-release-tamia/verifyRelease"
    },
    "semanticPeerDependencies": ["semantic-release-tamia"],
    "stylelintExtensions": ".pcss",
    "prettierPattern": "**/*.{js,md}",
    "prettierOptions": {
      "singleQuote": true,
      "trailingComma": "es5",
      "useTabs": true
    },
    "aliases": {
        "node": ["package", "editorconfig", "gitignore", "eslint", "prettier", "lintstaged", "jsconfig"],
        "oss": ["package", "license", "readme", "contributing", "editorconfig", "gitignore", "eslint", "prettier", "lintstaged", "jsconfig"],
        "site": ["package", "editorconfig", "gitignore", "eslint", "stylelint", "tamia"],
        "sync": ["license", "editorconfig", "gitignore", "eslint", "prettier", "lintstaged"]
    }
}
